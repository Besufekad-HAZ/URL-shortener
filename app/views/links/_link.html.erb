<%= tag.div id: dom_id(link) do %>
 <%= turbo_stream_from link %>

<div class="grid grid-cols-8 items-center py-4">
  <div class="col-span-5">

  <%= link_to view_path(link), target: '_blank', data: {turbo: false}, class: "no-underline" do %>
    <%= favicon_image_tag link.domain, class: "inline-block m-0" %>
    <%= link.title || link.url %>
    <% tag.div link.description, class: "text-xs text-gray-700" %>
    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6 inline-block">
      <path stroke-linecap="round" stroke-linejoin="round" d="M13.5 6H5.25A2.25 2.25 0 0 0 3 8.25v10.5A2.25 2.25 0 0 0 5.25 21h10.5A2.25 2.25 0 0 0 18 18.75V10.5m-10.5 6L21 3m0 0h-5.25M21 3v5.25" />
   </svg>
  <% end %>
  </div>

  <div class="col-span-2 text-center">
  <%= link_to pluralize(link.views_count, "view"), link, class: "text-xs px-3 mb-5 py-2 rounded bg-gray-100"  %>
  </div>

   <div class="text-center">
  <%= link_to "Copy", link, class: "text-xs px-3 mb-5 py-2 rounded bg-gray-100 no-underline" %>
  </div>

  </div>
<% end %>
